<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/material_container"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        >

    <ImageView
        android:id="@+id/myTank"
        android:layout_width="@dimen/cell_size"
        android:layout_height="@dimen/cell_size"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tank" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/material_container"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="341dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/editor_clear"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="8dp"
            android:src="@drawable/ic_clear"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="345dp"
            tools:layout_editor_absoluteY="75dp"></ImageView>

        <ImageView
            android:id="@+id/editor_concrete"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="8dp"
            android:src="@drawable/concrete"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="345dp"
            tools:layout_editor_absoluteY="253dp"></ImageView>

        <ImageView
            android:id="@+id/editor_grass"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="8dp"
            android:src="@drawable/grass"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="345dp"
            tools:layout_editor_absoluteY="328dp"></ImageView>

        <ImageView
            android:id="@+id/editor_brick"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="8dp"
            android:src="@drawable/brick"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="345dp"
            tools:layout_editor_absoluteY="162dp">

        </ImageView>

        <ImageView
            android:id="@+id/editor_eagle"
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="8dp"
            android:src="@drawable/eagle"
        />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>